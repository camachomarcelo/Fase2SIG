<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariocordova.fase1grupom.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnLinea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="verLinea"
            android:text="Ver Linea"

            android:layout_marginTop="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnTodasLasLineas"
            android:layout_marginStart="27dp" />

        <Button
            android:id="@+id/btnTodasLasLineas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="verTodasLasLineas"

            android:text="Ver todas las lineas"
            android:layout_marginStart="83dp"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/btnLinea"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
